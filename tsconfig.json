{
  "compilerOptions": {
    "target": "ES2020", // Modern JS target
    "module": "commonjs", // Node.js modules
    "lib": ["ES2020"], // Include ES2020 built-ins
    "outDir": "./dist", // Compiled JS output
    "rootDir": "./", // Root folder includes index.ts + src
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Enables import compatibility
    "skipLibCheck": true, // Skip type checks on node_modules
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true // Allows importing JSON files
  },
  "include": [
    "src/**/*", // All TS files in src
    "index.ts" // Root index.ts
  ],
  "exclude": ["node_modules", "dist"]
}
